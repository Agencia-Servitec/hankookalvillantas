---
interface Props {
  type?: "primary" | "secondary" | "tertiary";
}

const { type = "primary"} = Astro.props;
---

<button class={type}>
  <slot />
</button>

<style lang="scss">
  button {
    padding: 0.7em 1.2em;
    text-align: center;
    border-radius: 7em;
    border: none;
    font-weight: 600;
    cursor: pointer;
  }
  .primary {
    background-color: #fe4e02;
    color: #fff;
  }
  .secondary {
    background-color: #8b8b8b;
    color: #fff;
  }
  .tertiary{
    margin: 0 auto;
    font-size: 1.5em;
    text-transform: upperCase;
    font-style: italic;
    background-color: #fe4e02;
    color: #fff;
  }

  .buttonCard{
    position: absolute;
    bottom: 0;
    right: 0;
  }
</style>
