---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ContactForm from "./ContactForm";
---

<BaseLayout title="Contacto">
  <main>
    <section>
      <span>Contacto</span>

      <div style="margin-top: 4em">
        <ContactForm client:visible transition:persist />
      </div>
    </section>
  </main>
</BaseLayout>

<style lang="scss">
  main {
    margin: 2em 0;

    section {
      background-image: url("/images/form-backgrouns.webp");
      padding: 1em 1.5em 3em 1.5em;
      max-width: 450px;
      width: 100%;
      margin: auto;
      text-align: center;
      border-radius: 1em;

      span {
        display: inline-block;
        padding: 0.3em;
        font-size: 2.2em;
        font-weight: 600;
      }
    }
  }
</style>
