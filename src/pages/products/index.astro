---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Button from "../../components/Button.astro";
import CardProduct from "../../components/CardProduct.astro";
import Title from "../../components/ui/Title.astro";

console.log("products page");
---

<BaseLayout title="Productos">
  <main>
    <Title title="NUESTROS">PRODUCTOS</Title>
    <section class="products">
      <CardProduct />
      <CardProduct />
      <CardProduct />
      <CardProduct />
      <CardProduct />
      <CardProduct />
      <CardProduct />
      <CardProduct />
    </section>
    <section class="quoteButton">
      <Button type="tertiary">Cotizar otro</Button>
    </section>
  </main>
</BaseLayout>

<style lang="scss">
  main {
    width: 100%;
    margin-top: 10rem;
    padding: 2em;
  }
  .products {
    max-width: 1280px;
    margin: auto;
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2em;
  }
  .quoteButton {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 6em 0 2em;
  }
</style>
