<style lang="scss">
  main {
    margin-top: 4em;

    .wrapper-banner {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: start;
      img {
        width: 100%;
        object-fit: contain;

      }
      .text-absolute-item {

        font-size: 0.8em;
        max-width: 28em;
        padding: 2em 1em;
        position: absolute;
        color: #fff;
        text-transform: uppercase;
        font-style: italic;


      }
    }
  }

  @media (min-width: 500px) {
    main {
      .wrapper-banner {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: start;
        img {
          width: 100%;
          object-fit: contain;

        }
        .text-absolute-item {
          margin-top: -3em;
          font-size: 2em;
          max-width: 28em;
          padding: 2em 1em;
          position: absolute;
          color: #fff;
          text-transform: uppercase;
          font-style: italic;

        }
      }
    }
  }
</style>
