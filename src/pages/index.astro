---
import { BaseLayout } from "../layouts";
import {
  CarouselProducts,
  Banner,
  Testimonials,
  MapLocation,
  SectionWrapper,
} from "../components";
---

<BaseLayout title="Hankook Alvillantas">
  <main>
    <div class="banner-wrapper">
      <img src="/public/initial-banner.webp" alt="banner hankook alvillantas" />
      <div class="text-absolute-item">
        <h1>La mejor calidad de NEUM√ÅTICOS A TU ALCANCE</h1>
      </div>
    </div>

    <SectionWrapper>
      <CarouselProducts />
    </SectionWrapper>

    <SectionWrapper>
      <Banner />
      <Testimonials />
    </SectionWrapper>

    <SectionWrapper>
      <MapLocation />
    </SectionWrapper>
  </main>
</BaseLayout>

<style lang="scss">
  //MOBILE AND TABLET
  main {
    .banner-wrapper {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: start;
      img {
        width: 100%;
        height: 40vh;
        object-fit: cover;
      }
      .text-absolute-item {
        font-size: 1.2em;
        max-width: 28em;
        padding: 2em 1em;
        position: absolute;
        color: #fff;
        text-transform: uppercase;
        font-style: italic;
      }
    }
  }

  //DESKTOP
  @media (min-width: 920px) {
    main {
      .banner-wrapper {
        img {
          width: 100%;
          height: 70vh;
        }

        .text-absolute-item {
          font-size: 2em;
        }
      }
    }
  }
</style>
