---
import { Button } from "../components";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Hankook Alvillabtas" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div class="img-logo">
        <a href="/"><img src="./logo.webp" alt="logo hankook alvillantas" /></a>
      </div>
      <div class="item-menu">
        <ul>
          <li><a href="/">Inicio</a></li>
          <li><a href="/about-us">Nosotros</a></li>
          <li><a href="/products">Productos</a></li>
          <li><Button>Contacto</Button></li>
        </ul>
      </div>
    </header>
    <div class="main">
      <slot />
    </div>
    <footer>
      <h2>Footer</h2>
    </footer>
  </body>
</html>

<style is:global lang="scss">
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    color: #fff;
  }
  header {
    width: 100%;
    height: auto;
    display: flex;
    justify-content: space-between;
    padding: 1em;
    position: fixed;
    top: 0;
    z-index: 700;
    .img-logo {
      img {
        width: 11em;
        height: auto;
        object-fit: contain;
      }
    }
    .item-menu {
      display: flex;
      justify-content: end;
      ul {
        list-style: none;
        padding: 0;
        display: flex;
        align-items: center;
        gap: 1em;
        li a {
          text-decoration: none;
          color: #fff;
        }
      }
    }
  }
  .main {
    width: 100%;
    min-height: 78vh;
    height: auto;
  }
  footer {
    width: 100%;
    height: 7vh;
    background-color: #1a1818;
    text-align: center;
    padding: 1em;
  }
</style>
